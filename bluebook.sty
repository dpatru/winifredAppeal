	\StrCount{#1}{,}[\commacount]%
	\StrPosition[\commacount]{#1}{,}[\lastcommapos]%
	\StrGobbleLeft{#1}{\lastcommapos}[\citation]%
	\StrLeft{#1}{\numexpr \lastcommapos-1}[#2]%
