%%   \pincite{Lochner}{52}. \\
%%   \See \pincite{Steel Seizure Case}{625}.
%% \end{Example}
 
%% \noindent In order to cite legal sources in the body of the text, first include a _\citecase_ command with the 
%% case citation to define the case as a source. At the point in the text where the citation should appear, use
%% _\cite_ or _\pincite_, passing the short name as an argument.  Spacing and commas are important (extra spaces will be preserved). 
%%
%% By default, the first party is used for the short name of the case, unless that party is 
%% ``United States,'' ``State,'' ``Commonwealth,'' or ``People,'' in which case the second party is used.  
%% To override the choice of short name, set the optional parameter. 
%%
%% With case citations that differ from the standard format, you may need to use the _\newcase_ command.
%% For example, in ``\emph{Marbury v. Madison}, 5 U.S. (1 Cranch), 137 (1803)'', the extra parentheses around
%% the ``(1~Cranch.)'' will throw off the parser. See the way that this is cited below. 
%%
%
%
%Use parseCitations as: (\parseCitations 123 US 234; 345 SuprCt 456; X X 
% X; ), note that "; X X X; " (9 characters) are  added after the last
% cite.
\def\parseCitations#1; {%Find the last space-delimited word for the
  % page
  % \par parseCitations (#1)\par
  \IfSubStr{#1}{X X X}{% found the end marker, stop
  }{%
    \StrCount{#1}{ }[\@spacecount]%
    \StrPosition[\@spacecount]{#1}{ }[\@lastspacepos]%
    \StrGobbleLeft{#1}{\numexpr \@lastspacepos}[\@page]%
    % \par Grabbed page (\@page) from (#1)\par 
    \StrLeft{#1}{\numexpr \@lastspacepos-1}[\@reporter]%
    % \par Grabbed reporter (\@reporter) from (#1)\par 
    \edef\reporters{\ifempty{\reporters}{\@reporter}{\reporters; \@reporter}}%
    \edef\startpages{\ifempty{\startpages}{\@page}{\startpages; \@page}}%
    % Recursing\par%
    \parseCitations%
  }%
}

\newcommand{\deriveShortCaseName}[2][\empty]{% Set case name to
                                % optional argument if it's given,
                                % otherwise just leave the output.
  % Use the first party name, unless it's too common
  \IfSubStr{#2}{ v. }{\edef\v{ v. }}%
  {\IfSubStr{#2}{ v }{\edef\v{ v }}%
    {\edef\v{\empty}}}%
  \ifx\empty\v\empty\edef\@shortname{#2}%
  \else%
  \StrBefore{#2}{\v}[\@firstpartyname]%
  \StrBehind{#2}{\v}[\@secondpartyname]%
  \edef\@shortname{\@firstpartyname}%
  \IfEq{\@firstpartyname}{United States}{\edef\@shortname{\@secondpartyname}}{}%
  \IfEq{\@firstpartyname}{State}{\edef\shortname{\@secondpartyname}}{}%
  \IfEq{\@firstpartyname}{People}{\edef\shortname{\@secondpartyname}}{}%
  \IfEq{\@firstpartyname}{Commonwealth}{\edef\@shortname{\@secondpartyname}}{}%
  \fi%
  \ifx\empty#1\empty%
  \def\next{\@shortname}%
  \else%
  \def\next{\empty}
  \edef#1{\@shortname}%
  \fi%
  \next
}
\newcommand{\parseCase}[3][]{%1: [short name], 2: full case, 3: continuation
  % The continuation receives five parameters: shortname, casename,
  % reporters, startpages, paren
  % parseCase(#1)(#2)\par%
  % Find the first space and paren, and cut it and everything else after as the parenthetical
  \StrPosition{#2}{ (}[\@parenpos]%
  \StrGobbleLeft{#2}{\numexpr \@parenpos}[\@paren]%
  \StrLeft{#2}{\numexpr \@parenpos-1 }[\@withoutparen]%
  %
  % Debug
  % parenpos = (\@parenpos)\par paren = (\@paren)\par withoutparen = (\@withoutparen)\par%
  % 
  % With the parenthetical gone, we check if this case is unpublished.
  \IfSubStr[1]{#2}{, unpublished}{% case is unpublished
    \edef\unpublished{unpublished}%
    \StrBefore{\@withoutparen}{, unpublished}[\@casename]%
    \StrDel[1]{\@withoutparen}{\@casename ,}[\reporters]%
    \def\startpages{\empty}% 
    % \wlog{Unpublished case: #2}%
    % \wlog{casename: \@casename}%
    % \wlog{reporters: \reporters}%
  }{% case is published
    \edef\unpublished{\empty}%
    % we look for the LAST comma,
    % and assume the citation is there to the end, parallel cites are
    % separated by a semicolon.
    \StrCount{\@withoutparen}{,}[\@commacount]%
    \StrPosition[\@commacount]{\@withoutparen}{,}[\@lastcommapos]%
    \StrGobbleLeft{\@withoutparen}{\numexpr \@lastcommapos+1}[\@citation]%
    \StrLeft{\@withoutparen}{\numexpr \@lastcommapos-1}[\@casename]%
    %
    % Debug
    % published case\par citation = (\@citation)\par casename = (\@casename)\par%
    %
    \let\reporters\empty\let\startpages\empty%
    % Parsing Citations: (\@citation)
    \expandafter\parseCitations\@citation; X X X; %
    }% end unpublished/published split
    % Set the short name
    %\wlog{setting short name}%
    \IfEq{#1}{\empty}{% Short name was not given explicitly
      % Deriving shortname\par%
      % an edef here causes an error
      \deriveShortCaseName[\@shortname]{\@casename}%
    }{% else a short name is given explicitly, use that
      % Using explicit shortname (#1)\par%
      \edef\@shortname{#1}%edef throws error here
  }%
  #3[\unpublished]{\@shortname}{\@casename}{\reporters}{\startpages}{\@paren}%
} % end parseCase

\newcommand{\citecase}[2][]{%
  \ifx\empty#1\empty%
  \parseCase{#2}{\newcase}%
  \else%
  \parseCase[#1]{#2}{\newcase}%
  \fi%
}

